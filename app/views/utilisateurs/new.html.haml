%h1 Création d'utilisateur

.row
  .col-md-6.col-md-offset-3
    = form_for :utilisateur, :html => { :multipart => true}, url: utilisateurs_path do |f|
      = render 'shared/error_messages'

      %p Nom :
      = f.text_field :nom, class: 'form-control'

      %p Prenom :
      = f.text_field :prenom, class: 'form-control'

      %p Email :
      = f.email_field :email, class: 'form-control'

      %p Numéro de téléphone :
      = f.text_field :numero, class: 'form-control'

      %p Etes-vous un professionnel?
      = f.select(:compte, [['Non', "consommateur"], ['Oui', "professionnel"]])

      %p Avatar :
      = f.file_field :logo

      %p Mot de passe :
      = f.password_field :password, class: 'form-control'

      %p Confirmation du mot de passe :
      = f.password_field :password_confirmation, class: 'form-control'

      = f.submit "M'inscrire", class: "btn btn-primary"
